#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/rgb.h>

/ {
    keymap {
        compatible = "zmk,keymap";

// ----------------------------------------------      ----------------------------------------------
// | ESC  |  Q  |  W  |  E  |  R  |  T  |              |  Y  |  U  |  I  |  O  |  P  |     |  BKSP  |
// | TAB    |  A  |  S  |  D   |  F  |  G  |             |  H  |  J  |  K  |  L  |  '  |    ENTER   |
// | SHIFT     |  Z  |  X  |  C  |  V  |  B  |              |  N  |  M  |  ,  |  .  |  /  |  RSHFT  |
// | LCTRL   | LALT| LGUI |   SPACE/L2        |             |   SPACE/L1  | L2 |  RGUI  |  RALT  |RCTRL|
// -------------------------------------------        -----------------------------------------------

        default_layer {
            bindings = <
    &kp ESC   &kp Q    &kp W    &kp E     &kp R     &kp T   /**/ &kp Y       &kp U  &kp I     &kp O     &kp P     &kp GRAVE  &kp BACKSPACE
    &kp TAB   &kp A    &kp S    &kp D     &kp F     &kp G   /**/ &kp H       &kp J  &kp K     &kp L     &kp SEMI   &kp ENTER
    &kp LSHFT &kp Z    &kp X    &kp C     &kp V     &kp B   /**/ &kp N       &kp M  &kp COMMA &kp DOT   &kp FSLH  &kp RSHFT
    &kp LCTRL &kp LALT &kp LGUI &kp F1     &lt 2 SPACE         /**/ &lt 1 SPACE        &mo 2     &kp RGUI  &kp RALT  &kp RCTRL
            >;
        };

// ----------------------------------------------      ----------------------------------------------
// | trans    |  1  |  2  |  3  |  4  |  5  |              |  6  |  7  |  8  |  9  | 0 |  -  |  =  |
// | `      |     |  <- |  ^   |  -> |  Vo+ |             |    |  [  |  ]  |    |  '  |      \    |
// | trans     |     |     |     |  V  |  Vo- |              |     |     |    |     |     |  trans  |
// | trans   | trans| trans |     SL3      |             |   (being held)   | trans | trans | trans|trans|
// -------------------------------------------        -----------------------------------------------

        symbols_layer {
            bindings = <
    &trans     &kp 1    &kp 2    &kp 3     &kp 4     &kp 5         /**/ &kp 6    &kp 7      &kp 8       &kp 9       &kp 0     &kp MINUS  &kp EQUAL
    &kp GRAVE  &none    &none    &none     &none     &none         /**/ &none    &kp LBKT   &kp RBKT    &none   &kp SQT   &kp BACKSLASH
    &trans     &none    &none    &none     &kp DOWN  &kp C_VOL_DN  /**/ &none     &none    &none     &none     &none      &trans
    &trans     &trans   &trans   &none     &trans                  /**/ &trans             &trans    &trans    &trans     &trans
            >;
        };

// ----------------------------------------------      ----------------------------------------------
// | F1   |  F2 |  F3 |  F4 | F5  |  F6 |              |  F7     |    F8    |  F9  |    F1O   |   F11  |  F12  |  DEL  |
// | CAP      |     | home| PgUp | End |     |           |  Left   |  Down   |  Up   |  Right   |        |         |
// | trans     |  RGB T  |  RGB M   | PgDn |      |     | BT_NXT | BT_CLR |    |    |    |    |trans|
// | trans   | trans| trans |   (being held)     |           | SL3   | trans | trans | trans | trans  |
// -------------------------------------------        -----------------------------------------------

        fn_layer {
            bindings = <
    &kp F1        &kp F2    &kp F3     &kp F4     &kp F5       &kp F6    /**/ &kp F7     &kp F8     &kp F9    &kp F10   &kp F11    &kp F12  &kp DEL
    &kp CAPS      &none     &kp END    &kp PG_DN  &kp PG_UP    &kp HOME  /**/ &kp LEFT   &kp DOWN   &kp UP    &kp RIGHT &kp SQT    &kp C_PP
    &trans        &none     &none      &none     &none        &none     /**/  &none      &none &none     &none     &none      &bt BT_CLR
    &bt BT_SEL 0  &bt BT_SEL 1   &bt BT_SEL 2  &none   &trans               /**/ &trans                &bt BT_NXT    &trans    &trans     &bt BT_SEL 3
            >;
        };
    };
};
